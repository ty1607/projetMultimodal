      <item>pas question</item>
    </one-of>
  </rule>
  <rule id="rect">
    <one-of>
      <item>rectangle</item>
    </one-of>
  </rule>
  <rule id="ici">
    <one-of>
      <item>ici</item>
      <item>la</item>
